<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.ProveedorFragment">

    <TextView
        android:id="@+id/textProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Proveedor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/editTextNombreProveedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginBottom="16dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editTextNombreProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Proveedor"
        android:inputType="text"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textProveedor"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextDireccionProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:inputType="text"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNombreProveedor"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextContactoProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contacto"
        android:inputType="text"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDireccionProveedor"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextTelefonoProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Teléfono"
        android:inputType="phone"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextContactoProveedor"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonGuardarProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/buttonVerProveedores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTelefonoProveedor"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/buttonVerProveedores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Proveedores"
        app:layout_constraintTop_toBottomOf="@id/buttonGuardarProveedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/> <!-- Espacio adicional entre los botones -->

</androidx.constraintlayout.widget.ConstraintLayout>
